<%= javascript_include_tag 'tasks', 'data-turbolinks-track': 'true' %>

<h1>To Do List</h1>
<% if flash[:notice] %>
  <a class="notice" style="color: <%= @color %>"><%= flash[:notice] %></a>
<% else %>
<% end %>

<% if @tasks.any? %>
  <table class="table">
    <thead>
      <tr>
        <th scope="col">Tasks</th>
        <th scope="col">Status</th>
        <th scope="col" colspan="2"></th>
      </tr>
    </thead>

    <tbody>
      <%= render @tasks %>
    </tbody>
  </table>
<% else %>
  <p> You do not have any tasks </p>
<% end %>

<button type="button" class="btn btn-link"><%= link_to 'Add', new_task_path %></button>