<p id="notice" class="color-<%= (1..4).to_a.sample%>"><%= notice %></p>

<h1>Worldpackers Awesome To Do List</h1>

<% if @tasks.any? %>
  <table>
    <thead>
      <tr>
        <th>Tasks</th>
        <th>Status</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @tasks.each do |task| %>
        <tr>
          <td><%= truncate(task.description, length: 80) %></td>
          <td><%= link_to task.status, toggle_status_task_path(task) %></td>
          <td><%= link_to 'Show', task %></td>
          <td><%= link_to 'Edit', edit_task_path(task) %></td>
          <td><%= link_to 'Delete', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p> You do not have any tasks </p>
<% end %>

<br>

<%= link_to 'New Task', new_task_path %>
