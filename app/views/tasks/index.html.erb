<p id="notice"><%= notice %></p>

<h1>To Do List</h1>

<% if current_user %>
  <% if @tasks.any? %>
    <table>
      <thead>
        <tr>
          <th>Tasks</th>
          <th>Status</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @tasks.each do |task| %>
          <tr>
            <td><%= link_to "#{truncate(task.description, length: 80)}", task %></td>
            <td><%= link_to task.status, toggle_status_task_path(task) %></td>
            <td><%= link_to 'Edit', edit_task_path(task) %></td>
            <td><%= link_to 'Delete', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <p> You do not have any tasks </p>
  <% end %>
  <% else %>
    <p> Please Login or Register an account to access your ToDoList </p>
  <% end %>

<br>

<%= link_to 'New Task', new_task_path %>
